<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.peeking.framtidenskronoberg"
        version   = "1.0.0">
    <name>Framtidens Kronoberg</name>

    <description>
       Socialdemokraterna i Kronobergs län vill veta vad du tycker om landstinget. Skicka in dina åsikter och förslag via appen.
    </description>

    <author email="pierre@softwall.se">
        Pierre Nilsson, Karl Längberg, Peeking Peakcock, Apache Cordova Team
    </author>
	
	
<gap:platform name="ios" />
<gap:platform name="android" />

<icon src="icon.png" />	
<icon src="icon.png" gap:platform="ios" width="57" height="57" />
<icon src="icon-72.png" gap:platform="ios" width="72" height="72" />
<icon src="icon_at_2x.png" gap:platform="ios" width="114" height="114" />

<icon src="android/icon/ldpi.png" gap:platform="android" gap:density="ldpi" />
<icon src="android/icon/mdpi.png" gap:platform="android" gap:density="mdpi" />
<icon src="android/icon/hdpi.png" gap:platform="android" gap:density="hdpi" />
<icon src="android/icon/xhdpi.png" gap:platform="android" gap:density="xhdpi" />

  	
	
<gap:splash src="Default.png" gap:platform="ios" width="320" height="480" />
<gap:splash src="Default_at_2x.png" gap:platform="ios" width="640" height="960" />
<gap:splash src="Default_iphone5.png" gap:platform="ios" width="640" height="1136" />


<gap:splash src="android/splash/ldpi.png" gap:platform="android" gap:density="ldpi" />
<gap:splash src="android/splash/mdpi.png" gap:platform="android" gap:density="mdpi" />
<gap:splash src="android/splash/hdpi.png" gap:platform="android" gap:density="hdpi" />
<gap:splash src="android/splash/xhdpi.png" gap:platform="android" gap:density="xhdpi" />



    <feature name="http://api.phonegap.com/1.0/device" />

    <preference name="phonegap-version" value="2.9.0" />

    <preference name="orientation"      value="portrait" />
    <preference name="target-device"    value="handset" />
    <preference name="fullscreen"       value="true" />
	<preference name="webviewbounce" 	value="false" />
	<preference name="prerendered-icon" value="true" />

	<preference name="show-splash-screen-spinner" value="false" />
	<plugin name="InAppBrowser" value="CDVInAppBrowser" />
	
	<access origin="*" />
	
</widget>
